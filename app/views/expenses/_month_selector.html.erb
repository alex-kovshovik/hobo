<div class="flex flex-row mt-4">
  <%= link_to date_expenses_path(date: @date.prev_month), class: "flex-initial p-4" do %>
    <i class="fa-solid fa-arrow-left-long"></i>
  <% end %>

  <h1 class="text-3xl flex-auto text-center my-auto"><%= link_to @date.strftime("%B %Y"), expenses_path(date: @date) %></h1>

  <%= link_to date_expenses_path(date: @date.next_month), class: "flex-initial p-4" do %>
    <i class="fa-solid fa-arrow-right-long"></i>
  <% end %>
</div>
